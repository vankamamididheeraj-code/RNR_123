@page "/yearquarter/edit/{Id:guid}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using System.Net.Http.Json
@using RewardsAndRecognitionBlazorApp.ViewModels
@inject HttpClient Http
@inject NavigationManager Nav
@inject JsonSerializerOptions JsonOptions

<PageTitle>Edit Year Quarter</PageTitle>

<h2 class="mb-4">Edit Year Quarter</h2>

<div class="card p-4 shadow-sm" style="max-width: 600px; margin: auto;">
    @if (isLoading)
    {
        <p class="text-muted m-0">Loading...</p>
    }
    else if (!string.IsNullOrWhiteSpace(loadError))
    {
        <div class="text-danger">@loadError</div>
    }
    else
    {
        <EditForm Model="@model" OnValidSubmit="UpdateAsync">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <!-- Hidden fields (same as MVC) -->
            @* <InputHidden @bind-Value="model.Id" />
            <InputHidden @bind-Value="model.Year" /> *@

            <!-- Quarter hidden: keep value but don't show -->
            <InputHidden Value="@QuarterToString(model.Quarter)" />

            <div class="mb-3">
                <label class="form-label">Start Date</label>
                <InputDate class="form-control" @bind-Value="model.StartDate" />
                <ValidationMessage For="@(() => model.StartDate)" class="text-danger" />
            </div>

            <div class="mb-3">
                <label class="form-label">End Date</label>
                <InputDate class="form-control" @bind-Value="model.EndDate" />
                <ValidationMessage For="@(() => model.EndDate)" class="text-danger" />
            </div>

            <div class="form-check mb-3">
                <InputCheckbox class="form-check-input" @bind-Value="model.IsActive" id="isActiveChk" />
                <label class="form-check-label" for="isActiveChk">Is Active</label><br />
                <ValidationMessage For="@(() => model.IsActive)" class="text-danger" />
            </div>

            @if (!string.IsNullOrWhiteSpace(saveError))
            {
                <div class="text-danger mb-3">@saveError</div>
            }

            <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">Cancel</button>

                <button type="submit" class="btn btn-dark" disabled="@isSaving">
                    @(isSaving ? "Updating..." : "Update")
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public Guid Id { get; set; }

    private bool isLoading = true;
    private bool isSaving = false;

    private string? loadError;
    private string? saveError;

    private YearQuarterView model = new();

    protected override async Task OnParametersSetAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            loadError = null;
            saveError = null;
            isLoading = true;

            var yq = await Http.GetFromJsonAsync<YearQuarterView>($"api/yearquarter/{Id}", JsonOptions);
            if (yq == null)
            {
                loadError = "Year Quarter not found.";
                return;
            }

            model = yq;
        }
        catch (Exception ex)
        {
            loadError = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Cancel()
    {
        Nav.NavigateTo("/yearquarter");
    }

    private async Task UpdateAsync()
    {
        try
        {
            saveError = null;
            isSaving = true;

            // Safety: ensure Id matches route
            model.Id = Id;

            var resp = await Http.PutAsJsonAsync($"api/yearquarter/{Id}", model);

            if (!resp.IsSuccessStatusCode)
            {
                var body = await resp.Content.ReadAsStringAsync();
                saveError = string.IsNullOrWhiteSpace(body)
                    ? $"Update failed ({(int)resp.StatusCode})."
                    : $"Update failed ({(int)resp.StatusCode}): {body}";
                return;
            }

            Nav.NavigateTo("/yearquarter");
        }
        catch (Exception ex)
        {
            saveError = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private static string QuarterToString(object? q) => q?.ToString() ?? "";
}

