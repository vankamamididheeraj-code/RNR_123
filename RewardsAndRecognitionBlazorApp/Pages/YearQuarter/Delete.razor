@page "/yearquarter/delete/{Id:guid}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using System.Net.Http.Json
@using RewardsAndRecognitionBlazorApp.ViewModels
@inject HttpClient Http
@inject NavigationManager Nav
@inject JsonSerializerOptions JsonOptions

<PageTitle>Delete Year Quarter</PageTitle>

<h2 class="mb-4">Delete Year Quarter</h2>

<div class="alert alert-warning shadow-sm" role="alert">
    Are you sure you want to delete this year quarter?
</div>

<div class="card p-4 shadow-sm" style="max-width: 600px; margin: auto;">
    @if (isLoading)
    {
        <p class="text-muted m-0">Loading...</p>
    }
    else if (!string.IsNullOrWhiteSpace(loadError))
    {
        <div class="text-danger">@loadError</div>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-4">Year</dt>
            <dd class="col-sm-8">@model.Year</dd>

            <dt class="col-sm-4">Quarter</dt>
            <dd class="col-sm-8">@model.Quarter</dd>
        </dl>

        @if (!string.IsNullOrWhiteSpace(deleteError))
        {
            <div class="text-danger mb-3">@deleteError</div>
        }

        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isDeleting">
                Cancel
            </button>

            <button type="button" class="btn btn-danger" @onclick="DeleteAsync" disabled="@isDeleting">
                @(isDeleting ? "Deleting..." : "Delete")
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public Guid Id { get; set; }

    private bool isLoading = true;
    private bool isDeleting = false;

    private string? loadError;
    private string? deleteError;

    private YearQuarterView model = new();

    protected override async Task OnParametersSetAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            isLoading = true;
            loadError = null;
            deleteError = null;

            var yq = await Http.GetFromJsonAsync<YearQuarterView>($"api/yearquarter/{Id}", JsonOptions);
            if (yq == null)
            {
                loadError = "Year Quarter not found.";
                return;
            }

            model = yq;
        }
        catch (Exception ex)
        {
            loadError = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Cancel()
    {
        Nav.NavigateTo("/yearquarter");
    }

    private async Task DeleteAsync()
    {
        try
        {
            deleteError = null;
            isDeleting = true;

            var resp = await Http.DeleteAsync($"api/yearquarter/{Id}");
            if (!resp.IsSuccessStatusCode)
            {
                var body = await resp.Content.ReadAsStringAsync();
                deleteError = string.IsNullOrWhiteSpace(body)
                    ? $"Delete failed ({(int)resp.StatusCode})."
                    : $"Delete failed ({(int)resp.StatusCode}): {body}";
                return;
            }

            Nav.NavigateTo("/yearquarter");
        }
        catch (Exception ex)
        {
            deleteError = ex.Message;
        }
        finally
        {
            isDeleting = false;
        }
    }
}

