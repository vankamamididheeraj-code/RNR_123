    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Initialize session from localStorage first
            await Session.InitializeAsync(JS);

            // Check if logged in before loading data
            if (!Session.IsLoggedIn)
            {
                isLoading = false;
                return;
            }

            //1) Nominees
            try
            {
                var resp = await Http.GetAsync("api/user/active");
                var body = await resp.Content.ReadAsStringAsync();

                if (!resp.IsSuccessStatusCode)
                    throw new Exception($"Nominees failed: {(int)resp.StatusCode} {resp.ReasonPhrase}. Body: {body}");

                nominees = System.Text.Json.JsonSerializer.Deserialize<List<UserView>>(body,
                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();
            }
            catch (Exception ex)
            {
                throw new Exception("Error loading nominees. " + ex.Message);
            }

            //2) Categories
            try
            {
                var resp = await Http.GetAsync("api/category");
                var body = await resp.Content.ReadAsStringAsync();

                if (!resp.IsSuccessStatusCode)
                    throw new Exception($"Categories failed: {(int)resp.StatusCode} {resp.ReasonPhrase}. Body: {body}");

                categories = System.Text.Json.JsonSerializer.Deserialize<List<CategoryView>>(body,
                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();
            }
            catch (Exception ex)
            {
                throw new Exception("Error loading categories. " + ex.Message);
            }

            //3) Active Quarter
            try
            {
                var resp = await Http.GetAsync("api/yearquarter/active");
                var body = await resp.Content.ReadAsStringAsync();

                if (!resp.IsSuccessStatusCode)
                    throw new Exception($"Active quarter failed: {(int)resp.StatusCode} {resp.ReasonPhrase}. Body: {body}");

                var options = new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                };

                var list = JsonSerializer.Deserialize<
    List<RewardsAndRecognitionBlazorApp.Pages.Nomination.Create.YearQuarterApiDto>
>(body, options);

                var yq = list.FirstOrDefault(x => x.IsActive && !x.IsDeleted)
                      ?? list.FirstOrDefault(x => !x.IsDeleted);

                if (yq is null)
                    throw new Exception("No quarter found.");

                activeYearQuarterId = yq.Id;
                activeQuarterDisplay = $"{yq.Year} {yq.Quarter}";
                form.YearQuarterId = activeYearQuarterId;
            }
            catch (Exception ex)
            {
                throw new Exception("Error loading active quarter. " + ex.Message);
            }

            // Set nominator from session
            form.NominatorId = Session.UserId;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isSubmitting = true;

        try
        {
            // Validation guards beyond DataAnnotations (optional)
            if (string.IsNullOrWhiteSpace(Session.UserId))
            {
                errorMessage = "You must be logged in to submit a nomination.";
                return;
            }

            // Map form -> Nomination (your API expects Nomination model)
            var nomination = new NominationView
            {
                Id = Guid.NewGuid(), // optional; API/db may generate
                NominatorId = Session.UserId,
                NomineeId = form.NomineeId!,
                CategoryId = Guid.Parse(form.CategoryId!),
                YearQuarterId = form.YearQuarterId,
                Description = form.Description!,
                Achievements = form.Achievements!,
                // Status/CreatedAt are set by your API controller in POST.
            };

            var resp = await Http.PostAsJsonAsync("api/nomination", nomination);

            if (resp.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/nominations", true);
                return;
            }

            var content = await resp.Content.ReadAsStringAsync();
            errorMessage = $"Submit failed: {content}";
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while submitting.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel() => Nav.NavigateTo("/nominations");

