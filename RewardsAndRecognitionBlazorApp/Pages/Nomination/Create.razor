@page "/nomination/create"
@layout EmptyLayout
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Manager,TeamLead,Director")]
@using RewardsAndRecognitionBlazorApp.ViewModels
@inject HttpClient Http
@inject NavigationManager Nav
@inject RewardsAndRecognitionBlazorApp.ViewModels.UserSession Session
@inject IJSRuntime JS
@inject JsonSerializerOptions JsonOptions
@implements IAsyncDisposable

<h2>Create Nomination</h2>

@if (isLoading)
{
    <div class="page-loading-spinner">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="scroll-wrapper">
        <div class="card-form">
            <h2>Create Nomination</h2>

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            @if (hasDraft)
            {
                <div class="alert alert-info">
                    <strong>Draft Found!</strong> You have a saved draft from @draftDate?.ToString("MMM dd, yyyy").
                    <button class="btn btn-sm btn-primary ms-2" @onclick="LoadDraft">Load Draft</button>
                    <button class="btn btn-sm btn-secondary ms-1" @onclick="DiscardDraft">Discard</button>
                </div>
            }

            @if (!Session.IsLoggedIn)
            {
                <div class="alert alert-warning">
                    You must be <a href="/login">logged in</a> to submit a nomination.
                </div>
                <button class="btn btn-secondary" @onclick="Cancel">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
            }
            else
            {
                <EditForm Model="form" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label>Nominee <span class="text-danger">*</span></label>
                    <InputSelect class="form-control" @bind-Value="form.NomineeId" disabled="@isLoadingNominees">
                        <option value="">-- Select Nominee --</option>
                        @if (isLoadingNominees)
                        {
                            <option value="">Loading...</option>
                        }
                        else if (nominees.Count == 0)
                        {
                            <option value="">No nominees available</option>
                        }
                        else
                        {
                            @foreach (var u in nominees)
                            {
                                <option value="@u.Id">@u.Name (@u.Email)</option>
                            }
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => form.NomineeId)" />
                </div>

                <div class="form-group">
                    <label>Category <span class="text-danger">*</span></label>
                    <InputSelect class="form-control" @bind-Value="form.CategoryId">
                        <option value="">-- Select Category --</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => form.CategoryId)" />
                </div>

                <div class="form-group">
                    <label>Quarter <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" value="@activeQuarterDisplay" disabled />
                </div>

                <div class="form-group">
                    <label>Description <span class="text-danger">*</span></label>
                    <div class="quill-editor-wrapper">
                        <div id="description-editor" class="quill-editor"></div>
                    </div>
                    <ValidationMessage For="@(() => form.Description)" />
                </div>

                <div class="form-group">
                    <label>Achievements <span class="text-danger">*</span></label>
                    <div class="quill-editor-wrapper">
                        <div id="achievements-editor" class="quill-editor"></div>
                    </div>
                    <ValidationMessage For="@(() => form.Achievements)" />
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-indigo" disabled="@isSubmitting">
                        @(isSubmitting ? "Submitting..." : "Submit Nomination")
                    </button>

                    <button type="button" class="btn btn-warning" @onclick="SaveDraft" disabled="@isSavingDraft">
                        @(isSavingDraft ? "Saving..." : "Save Draft")
                    </button>

                    <button type="button" class="btn btn-secondary" @onclick="Cancel">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                </div>
            </EditForm>
            }
        </div>
    </div>
}

<style>
    .scroll-wrapper {
        max-height: 85vh;
        overflow-y: auto;
        padding: 20px;
    }

    .card-form {
        max-width: 800px;
        margin: auto;
        background-color: #fff;
        padding: 25px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

        .card-form h2 {
            margin-bottom: 20px;
            font-weight: 600;
            text-align: center;
        }

    .form-group {
        margin-bottom: 16px;
    }

    label {
        font-weight: 600;
        display: block;
    }

    .btn-indigo {
        background: #303f9f;
        color: white;
    }

        .btn-indigo:hover {
            background: #303f9f;
            color: white;
        }

    .page-loading-spinner {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(255,255,255,0.7);
        z-index: 99999;
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

@code {
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool isSavingDraft = false;
    private bool isLoadingNominees = false;
    private string? errorMessage;

    private List<UserView> nominees = new();
    private List<CategoryView> categories = new();

    private DotNetObjectReference<Create>? dotNetRef;
    private bool editorInitialized = false;
    private bool achievementsEditorInitialized = false;

    private bool hasDraft = false;
    private DateTime? draftDate;
    private Guid? draftId;

    private Guid activeYearQuarterId;
    private string activeQuarterDisplay = "";

    // Form model (keeps strings for dropdown binding)
    private CreateNominationView form = new();

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Initialize session from localStorage first
            await Session.InitializeAsync(JS);

            // Check if logged in before loading data
            if (!Session.IsLoggedIn)
            {
                isLoading = false;
                return;
            }

            // Set nominator from session
            form.NominatorId = Session.UserId;

            //1) Load nominees based on logged-in user's role
            try
            {
                isLoadingNominees = true;
                var resp = await Http.GetAsync($"api/user/under-lead/{Session.UserId}");
                var body = await resp.Content.ReadAsStringAsync();

                if (!resp.IsSuccessStatusCode)
                {
                    // If user is not a lead/manager/director, fall back to all active users
                    var allUsersResp = await Http.GetAsync("api/user/active");
                    var allUsersBody = await allUsersResp.Content.ReadAsStringAsync();
                    
                    if (allUsersResp.IsSuccessStatusCode)
                    {
                        nominees = System.Text.Json.JsonSerializer.Deserialize<List<UserView>>(allUsersBody,
                            new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();
                    }
                }
                else
                {
                    nominees = System.Text.Json.JsonSerializer.Deserialize<List<UserView>>(body,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();
                }

                isLoadingNominees = false;
            }
            catch (Exception ex)
            {
                isLoadingNominees = false;
                throw new Exception("Error loading nominees. " + ex.Message);
            }

            //2) Categories
            try
            {
                var resp = await Http.GetAsync("api/category");
                var body = await resp.Content.ReadAsStringAsync();

                if (!resp.IsSuccessStatusCode)
                    throw new Exception($"Categories failed: {(int)resp.StatusCode} {resp.ReasonPhrase}. Body: {body}");

                categories = System.Text.Json.JsonSerializer.Deserialize<List<CategoryView>>(body,
                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();
            }
            catch (Exception ex)
            {
                throw new Exception("Error loading categories. " + ex.Message);
            }

            //3) Active Quarter
            try
            {
                var resp = await Http.GetAsync("api/yearquarter/active");
                var body = await resp.Content.ReadAsStringAsync();

                if (!resp.IsSuccessStatusCode)
                    throw new Exception($"Active quarter failed: {(int)resp.StatusCode} {resp.ReasonPhrase}. Body: {body}");

                var options = new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                };

                var list = JsonSerializer.Deserialize<List<YearQuarterApiDto>>(body, options);

                var yq = list.FirstOrDefault(x => x.IsActive && !x.IsDeleted)
                      ?? list.FirstOrDefault(x => !x.IsDeleted);

                if (yq is null)
                    throw new Exception("No quarter found.");

                activeYearQuarterId = yq.Id;
                activeQuarterDisplay = $"{yq.Year} {yq.Quarter}";
                form.YearQuarterId = activeYearQuarterId;
            }
            catch (Exception ex)
            {
                throw new Exception("Error loading active quarter. " + ex.Message);
            }

            //4) Check for existing draft - API endpoint not implemented yet
            // Uncomment when API endpoint is available
            /*
            try
            {
                var draftResp = await Http.GetAsync($"api/nomination/latest-draft/{Session.UserId}");
                if (draftResp.IsSuccessStatusCode)
                {
                    var draftBody = await draftResp.Content.ReadAsStringAsync();
                    var options = new System.Text.Json.JsonSerializerOptions 
                    { 
                        PropertyNameCaseInsensitive = true,
                        Converters = { new System.Text.Json.Serialization.JsonStringEnumConverter() }
                    };
                    var draft = System.Text.Json.JsonSerializer.Deserialize<NominationView>(draftBody, options);

                    if (draft != null)
                    {
                        hasDraft = true;
                        draftDate = draft.CreatedAt;
                        draftId = draft.Id;
                    }
                }
            }
            catch
            {
                // No draft found or error - not critical
            }
            */
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Initialize editors after loading is complete
        if (!isLoading)
        {
            try
            {
                if (!editorInitialized)
                {
                    dotNetRef = DotNetObjectReference.Create(this);
                    await JS.InvokeVoidAsync("QuillInterop.initializeEditor", 
                        "description-editor", 
                        dotNetRef, 
                        form.Description ?? "");
                    editorInitialized = true;
                }
                
                if (!achievementsEditorInitialized)
                {
                    await JS.InvokeVoidAsync("QuillInterop.initializeEditor", 
                        "achievements-editor", 
                        dotNetRef, 
                        form.Achievements ?? "");
                    achievementsEditorInitialized = true;
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Failed to initialize editor: {ex.Message}";
                StateHasChanged();
            }
        }
    }

    [JSInvokable]
    public void OnEditorContentChanged(string htmlContent)
    {
        form.Description = htmlContent;
    }

    [JSInvokable]
    public void OnAchievementsEditorContentChanged(string htmlContent)
    {
        form.Achievements = htmlContent;
    }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isSubmitting = true;

        try
        {
            // Validation guards beyond DataAnnotations
            if (string.IsNullOrWhiteSpace(Session.UserId))
            {
                errorMessage = "You must be logged in to submit a nomination.";
                return;
            }

            // Map form -> Nomination (your API expects Nomination model)
            var nomination = new NominationView
            {
                Id = draftId ?? Guid.NewGuid(), // Use draft ID if updating from draft
                NominatorId = Session.UserId,
                NomineeId = form.NomineeId!,
                CategoryId = Guid.Parse(form.CategoryId!),
                YearQuarterId = form.YearQuarterId,
                Description = form.Description!,
                Achievements = form.Achievements!,
                Status = NominationStatus.PendingManager,
                // Status/CreatedAt are set by your API controller in POST.
            };

            HttpResponseMessage resp;
            
            // If updating a draft, use PUT; otherwise POST
            if (draftId.HasValue)
            {
                // Update existing draft to submitted status
                resp = await Http.PutAsJsonAsync($"api/nomination/{draftId.Value}", nomination);
            }
            else
            {
                resp = await Http.PostAsJsonAsync("api/nomination", nomination);
            }

            if (resp.IsSuccessStatusCode)
            {
                // Delete the draft flag after successful submission
                if (draftId.HasValue)
                {
                    await Http.DeleteAsync($"api/nomination/{draftId.Value}");
                }
                
                Nav.NavigateTo("/nominations", false);
                return;
            }

            var content = await resp.Content.ReadAsStringAsync();
            errorMessage = $"Submit failed: {content}";
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while submitting.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task SaveDraft()
    {
        errorMessage = null;
        isSavingDraft = true;

        try
        {
            if (string.IsNullOrWhiteSpace(Session.UserId))
            {
                errorMessage = "You must be logged in to save a draft.";
                return;
            }

            var nomination = new NominationView
            {
                Id = draftId ?? Guid.NewGuid(),
                NominatorId = Session.UserId,
                NomineeId = form.NomineeId,
                CategoryId = string.IsNullOrWhiteSpace(form.CategoryId) ? Guid.Empty : Guid.Parse(form.CategoryId),
                YearQuarterId = form.YearQuarterId,
                Description = form.Description ?? "",
                Achievements = form.Achievements ?? "",
                Status = NominationStatus.Draft,
            };

            HttpResponseMessage resp;

            if (draftId.HasValue)
            {
                // Update existing draft
                resp = await Http.PutAsJsonAsync($"api/nomination/draft/{draftId.Value}", nomination);
            }
            else
            {
                // Create new draft
                resp = await Http.PostAsJsonAsync("api/nomination/draft", nomination);
            }

            if (resp.IsSuccessStatusCode)
            {
                var body = await resp.Content.ReadAsStringAsync();
                var options = new System.Text.Json.JsonSerializerOptions 
                { 
                    PropertyNameCaseInsensitive = true,
                    Converters = { new System.Text.Json.Serialization.JsonStringEnumConverter() }
                };
                var savedDraft = System.Text.Json.JsonSerializer.Deserialize<NominationView>(body, options);

                if (savedDraft != null)
                {
                    draftId = savedDraft.Id;
                    hasDraft = true;
                    draftDate = savedDraft.CreatedAt;
                }

                // Redirect to nominations page
                Nav.NavigateTo("/nominations", false);
                return;
            }
            else
            {
                var content = await resp.Content.ReadAsStringAsync();
                errorMessage = $"Failed to save draft: {content}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while saving draft: " + ex.Message;
        }
        finally
        {
            isSavingDraft = false;
        }
    }

    private async Task LoadDraft()
    {
        if (!draftId.HasValue)
            return;

        try
        {
            var resp = await Http.GetAsync($"api/nomination/{draftId.Value}");
            if (resp.IsSuccessStatusCode)
            {
                var body = await resp.Content.ReadAsStringAsync();
                var options = new System.Text.Json.JsonSerializerOptions 
                { 
                    PropertyNameCaseInsensitive = true,
                    Converters = { new System.Text.Json.Serialization.JsonStringEnumConverter() }
                };
                var draft = System.Text.Json.JsonSerializer.Deserialize<NominationView>(body, options);

                if (draft != null)
                {
                    form.NomineeId = draft.NomineeId;
                    form.CategoryId = draft.CategoryId.ToString();
                    form.Description = draft.Description;
                    form.Achievements = draft.Achievements;
                    form.YearQuarterId = draft.YearQuarterId;

                    // Update Quill editors with draft content
                    if (editorInitialized)
                    {
                        await JS.InvokeVoidAsync("QuillInterop.setContent", "description-editor", draft.Description ?? "");
                    }
                    if (achievementsEditorInitialized)
                    {
                        await JS.InvokeVoidAsync("QuillInterop.setContent", "achievements-editor", draft.Achievements ?? "");
                    }

                    // Reload nominees to ensure the selected nominee is in the list
                    await LoadNominees();

                    hasDraft = false; // Hide the banner after loading
                    await JS.InvokeVoidAsync("alert", "Draft loaded successfully!");
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading draft: " + ex.Message;
        }
    }

    private async Task DiscardDraft()
    {
        if (!draftId.HasValue)
            return;

        try
        {
            var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to discard this draft?");
            if (!confirmed)
                return;

            var resp = await Http.DeleteAsync($"api/nomination/{draftId.Value}");
            if (resp.IsSuccessStatusCode)
            {
                hasDraft = false;
                draftId = null;
                draftDate = null;
                await JS.InvokeVoidAsync("alert", "Draft discarded.");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error discarding draft: " + ex.Message;
        }
    }

    private async Task LoadNominees()
    {
        try
        {
            isLoadingNominees = true;
            var resp = await Http.GetAsync($"api/user/under-lead/{Session.UserId}");
            var body = await resp.Content.ReadAsStringAsync();

            if (!resp.IsSuccessStatusCode)
            {
                // If user is not a lead/manager/director, fall back to all active users
                var allUsersResp = await Http.GetAsync("api/user/active");
                var allUsersBody = await allUsersResp.Content.ReadAsStringAsync();
                
                if (allUsersResp.IsSuccessStatusCode)
                {
                    nominees = System.Text.Json.JsonSerializer.Deserialize<List<UserView>>(allUsersBody,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();
                }
            }
            else
            {
                nominees = System.Text.Json.JsonSerializer.Deserialize<List<UserView>>(body,
                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading nominees: " + ex.Message;
        }
        finally
        {
            isLoadingNominees = false;
        }
    }

    private void Cancel() => Nav.NavigateTo("/nominations");

    public async ValueTask DisposeAsync()
    {
        try
        {
            if (editorInitialized)
            {
                await JS.InvokeVoidAsync("QuillInterop.destroyEditor", "description-editor");
            }
            if (achievementsEditorInitialized)
            {
                await JS.InvokeVoidAsync("QuillInterop.destroyEditor", "achievements-editor");
            }
        }
        catch
        {
            // Ignore cleanup errors
        }

        dotNetRef?.Dispose();
    }

    // ------- DTOs / Form model -------

    private sealed class YearQuarterApiDto
    {
        public Guid Id { get; set; }
        public string Quarter { get; set; } = "";
        public int Year { get; set; }
        public bool IsActive { get; set; }
        public bool IsDeleted { get; set; }
    }
}
