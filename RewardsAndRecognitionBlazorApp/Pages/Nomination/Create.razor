@page "/nomination/create"
@layout EmptyLayout
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Manager,TeamLead,Director")]
@using RewardsAndRecognitionBlazorApp.ViewModels
@inject HttpClient Http
@inject NavigationManager Nav
@inject RewardsAndRecognitionBlazorApp.ViewModels.UserSession Session
@inject IJSRuntime JS
@inject JsonSerializerOptions JsonOptions

<h2>Create Nomination</h2>

@if (isLoading)
{
    <div class="page-loading-spinner">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="scroll-wrapper">
        <div class="card-form">
            <h2>Create Nomination</h2>

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            @if (!Session.IsLoggedIn)
            {
                <div class="alert alert-warning">
                    You must be <a href="/login">logged in</a> to submit a nomination.
                </div>
                <button class="btn btn-secondary" @onclick="Cancel">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
            }
            else
            {
                <EditForm Model="form" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label>Nominee <span class="text-danger">*</span></label>
                    <InputSelect class="form-control" @bind-Value="form.NomineeId">
                        <option value="">-- Select Nominee --</option>
                        @foreach (var u in nominees)
                        {
                            <option value="@u.Id">@u.Email</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => form.NomineeId)" />
                </div>

                <div class="form-group">
                    <label>Category <span class="text-danger">*</span></label>
                    <InputSelect class="form-control" @bind-Value="form.CategoryId">
                        <option value="">-- Select Category --</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => form.CategoryId)" />
                </div>

                <div class="form-group">
                    <label>Quarter <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" value="@activeQuarterDisplay" disabled />
                </div>

                <div class="form-group">
                    <label>Description <span class="text-danger">*</span></label>
                    <InputTextArea class="form-control" @bind-Value="form.Description" />
                    <ValidationMessage For="@(() => form.Description)" />
                </div>

                <div class="form-group">
                    <label>Achievements <span class="text-danger">*</span></label>
                    <InputTextArea class="form-control" @bind-Value="form.Achievements" />
                    <ValidationMessage For="@(() => form.Achievements)" />
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-indigo" disabled="@isSubmitting">
                        @(isSubmitting ? "Submitting..." : "Submit Nomination")
                    </button>

                    <button type="button" class="btn btn-secondary" @onclick="Cancel">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                </div>
            </EditForm>
            }
        </div>
    </div>
}

