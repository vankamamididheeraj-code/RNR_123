@page "/teams"
@layout EmptyLayout
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using System.Net.Http.Json
@using RewardsAndRecognitionBlazorApp.ViewModels
@inject HttpClient Http
@inject JsonSerializerOptions JsonOptions
@inject IJSRuntime JS
@inject NavigationManager Nav

<AdminNavBar ActivePage="Teams" />

<div class="container-lg px-3">

    <div class="user-header">
    <h2><i class="bi bi-people-fill me-2"></i> Teams</h2>

    <div class="d-flex align-items-center gap-3 flex-wrap">
        <div class="form-check form-switch">
            <input class="form-check-input"
                   type="checkbox"
                   id="toggleDeletedTeams"
                   @bind="ShowDeleted"
                   @bind:event="onchange"
                   @bind:after="OnShowDeletedChanged" />
            <label class="form-check-label" for="toggleDeletedTeams">Show Deleted</label>
        </div>

        <a class="btn btn-primary d-flex align-items-center" href="/teams/create">
            <i class="bi bi-plus-circle me-1"></i> Create
        </a>
    </div>
</div>

<div class="mt-3">
    @if (IsBusy && Teams.Count == 0)
    {
        <div class="alert alert-info m-0">Loading teams...</div>
    }
    else if (!string.IsNullOrWhiteSpace(Error))
    {
        <div class="alert alert-danger m-0">@Error</div>
    }
    else
    {
        <table class="users-table" id="teamsTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Team Lead</th>
                    <th>Manager</th>
                    <th>Director</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (!Teams.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">
                            <div class="alert alert-warning m-0" role="alert">
                                <i class="bi bi-info-circle"></i> No teams found.
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var team in Teams)
                    {
                        <tr class="@(team.IsDeleted ? "table-danger" : "")">
                            <td>@team.Name</td>
                            <td>@team.TeamLeadName</td>
                            <td>@team.ManagerName</td>
                            <td>@team.DirectorName</td>

                            <td>
                                @if (team.IsDeleted)
                                {
                                    <span class="text-muted">Deleted</span>
                                }
                                else
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm dropdown-toggle"
                                                type="button"
                                                id="dropdownMenuButton-@team.Id"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>

                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@team.Id">
                                            <li>
                                                <a class="dropdown-item" href="@($"/teams/edit/{team.Id}")">
                                                    <i class="bi bi-pencil-fill me-1"></i> Edit
                                                </a>
                                            </li>
                                            <li>
                                                @*
                                                <button type="button" class="dropdown-item text-danger" disabled="@IsBusy"
                                                        @onclick="() => DeleteAsync(team.Id)">
                                                    <i class="bi bi-trash-fill me-1"></i> Delete
                                                </button>
                                                *@
                                                <a class="dropdown-item text-danger"
                                                   href="@($"/teams/delete/{team.Id}")">
                                                    <i class="bi bi-trash-fill me-1"></i> Delete
                                                </a>

                                            </li>
                                        </ul>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-end mt-2">
            <Pager PageNumber="PageNumber" PageSize="PageSize" TotalCount="TotalCount" PageChanged="LoadPage" />
        </div>
    }
    </div>

</div>

<style>
    :root {
        --indigo-main: #3f51b5;
        --indigo-light: #5c6bc0;
    }

    .user-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0;
        gap: 12px;
        flex-wrap: wrap;
    }

    .users-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        overflow: hidden;
    }

        .users-table th, .users-table td {
            padding: 14px 16px;
            text-align: left;
        }

        .users-table th {
            background: linear-gradient(to right, var(--indigo-main), var(--indigo-light));
            color: white;
            font-weight: 600;
        }

        .users-table tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .users-table tr:hover {
            background-color: #eef1f7;
        }

    .btn.disabled, .btn:disabled {
        pointer-events: none;
        opacity: 0.6;
    }

    .dropdown-toggle::after {
        display: none;
    }

    .users-table, .users-table tbody, .users-table tr, .users-table td {
        overflow: visible !important;
        position: static !important;
    }

    .dropdown-menu {
        position: absolute !important;
        z-index: 1050 !important;
    }
</style>

@code {
    private bool ShowDeleted { get; set; } = false;
    private bool IsBusy { get; set; } = false;
    private string? Error { get; set; }

    private List<TeamRowVm> Teams { get; set; } = new();
    private int PageNumber { get; set; } = 1;
    private int PageSize { get; set; } = 5;
    private long TotalCount { get; set; } = 0;

    // ✅ userId -> "Name (Email)" map (case-insensitive)
    private Dictionary<string, string> UserMap { get; set; } =
        new(StringComparer.OrdinalIgnoreCase);

    protected override async Task OnInitializedAsync()
    {
        await ReloadAllAsync();
    }

    private async Task OnShowDeletedChanged()
    {
        await ReloadAllAsync();
    }

    private async Task ReloadAllAsync()
    {
        await LoadUserMapAsync(); // load names first
        PageNumber = 1;
        await LoadTeamsAsync();   // then load teams and map ids -> names
    }

    private async Task LoadPage(int newPage)
    {
        PageNumber = Math.Max(1, newPage);
        await LoadTeamsAsync();
    }

    private async Task LoadUserMapAsync()
    {
        try
        {
            Error = null;

            // ✅ Your UserController: GET api/user
            var res = await Http.GetAsync("api/user");
            if (!res.IsSuccessStatusCode)
            {
                Error = $"Users API failed ({(int)res.StatusCode}).";
                UserMap = new(StringComparer.OrdinalIgnoreCase);
                return;
            }

            var users = await res.Content.ReadFromJsonAsync<List<UserViewDto>>() ?? new();

            UserMap = users
     .Where(u => !string.IsNullOrWhiteSpace(u.Id))
     .ToDictionary(
         u => u.Id!.Trim(),
         u => string.IsNullOrWhiteSpace(u.Name) ? "Unknown" : u.Name.Trim(),
         StringComparer.OrdinalIgnoreCase
     );


            // Optional: If you want to confirm mapping worked, temporarily:
            // Error = $"Loaded users: {UserMap.Count}";
        }
        catch (Exception ex)
        {
            Error = $"Failed to load users: {ex.Message}";
            UserMap = new(StringComparer.OrdinalIgnoreCase);
        }
    }

    private async Task LoadTeamsAsync()
    {
        try
        {
            IsBusy = true;

            // call paged endpoint: GET api/team/paged?pageNumber=&pageSize=&includeDeleted=
            var url = $"api/team/paged?pageNumber={PageNumber}&pageSize={PageSize}&includeDeleted={(ShowDeleted ? "true" : "false")}";

            var paged = await Http.GetFromJsonAsync<PagedResult<TeamApiDto>>(url, JsonOptions);
            var items = paged?.Items ?? Array.Empty<TeamApiDto>();
            TotalCount = paged?.TotalCount ?? 0;

            // project + map IDs -> Names
            Teams = items.Select(t =>
            {
                var leadId = (t.TeamLeadId ?? "").Trim();
                var mgrId = (t.ManagerId ?? "").Trim();
                var dirId = (t.DirectorId ?? "").Trim();

                return new TeamRowVm
                {
                    Id = t.Id,
                    Name = t.Name ?? "",
                    TeamLeadId = leadId,
                    ManagerId = mgrId,
                    DirectorId = dirId,
                    IsDeleted = t.IsDeleted,

                    TeamLeadName = UserMap.TryGetValue(leadId, out var leadName) ? leadName : leadId,
                    ManagerName = UserMap.TryGetValue(mgrId, out var mgrName) ? mgrName : mgrId,
                    DirectorName = UserMap.TryGetValue(dirId, out var dirName) ? dirName : dirId,
                };
            }).ToList();
        }
        catch (Exception ex)
        {
            Error = $"Failed to load teams: {ex.Message}";
            Teams = new();
        }
        finally
        {
            IsBusy = false;
        }
    }

    private async Task DeleteAsync(Guid id)
    {
        try
        {
            IsBusy = true;
            Error = null;

            // ✅ TeamController soft delete: DELETE api/Team/{id}
            var res = await Http.DeleteAsync($"api/Team/{id}");
            if (!res.IsSuccessStatusCode)
                Error = $"Delete failed ({(int)res.StatusCode}).";

            await ReloadAllAsync();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            IsBusy = false;
        }
    }

    // DTO matching GET api/user
    private sealed class UserViewDto
    {
        public string? Id { get; set; }
        public string? Name { get; set; }
        public string? Email { get; set; }
    }

    // DTO matching GET api/Team response (Team entity)
    private sealed class TeamApiDto
    {
        public Guid Id { get; set; }
        public string? Name { get; set; }
        public string? TeamLeadId { get; set; }
        public string? ManagerId { get; set; }
        public string? DirectorId { get; set; }
        public bool IsDeleted { get; set; }
    }

    public class TeamRowVm : TeamView
    {
        public bool IsDeleted { get; set; }

        public string TeamLeadName { get; set; } = "Not Assigned";
        public string ManagerName { get; set; } = "Not Assigned";
        public string DirectorName { get; set; } = "Not Assigned";
    }
}
