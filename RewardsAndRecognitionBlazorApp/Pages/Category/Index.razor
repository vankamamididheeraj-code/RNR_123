@page "/categories"
@layout EmptyLayout
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@using System.Net.Http.Json
@using RewardsAndRecognitionBlazorApp.ViewModels
@inject HttpClient Http
@inject JsonSerializerOptions JsonOptions
@inject NavigationManager Nav
@inject IJSRuntime JS

<AdminNavBar ActivePage="Category" />

<div class="user-header">
    <h2><i class="bi bi-tags-fill me-2"></i> Categories</h2>

    <div class="d-flex align-items-center gap-3 flex-wrap">
        <div class="form-check form-switch">
            <input class="form-check-input"
                   type="checkbox"
                   id="toggleDeletedCategories"
                   @bind="ShowDeleted"
                   @bind:event="onchange"
                   @bind:after="OnShowDeletedChanged" />
            <label class="form-check-label" for="toggleDeletedCategories">Show Deleted</label>
        </div>

        <a class="btn btn-primary d-flex align-items-center" href="/categories/create">
            <i class="bi bi-plus-circle me-1"></i> Create
        </a>
    </div>
</div>

<div class="mt-3">
    @if (IsBusy && Categories.Count == 0)
    {
        <div class="alert alert-info m-0">Loading categories...</div>
    }
    else if (!string.IsNullOrWhiteSpace(Error))
    {
        <div class="alert alert-danger m-0">@Error</div>
    }
    else
    {
        <table class="users-table" id="categoriesTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Active</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (!Categories.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">
                            <div class="alert alert-warning m-0" role="alert">
                                <i class="bi bi-info-circle"></i> No categories found.
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var c in Categories)
                    {
                        <tr class="@(c.IsDeleted ? "table-danger" : "")">
                            <td>@c.Name</td>
                            <td>@(string.IsNullOrWhiteSpace(c.Description) ? "-" : c.Description)</td>
                            <td>
                                @if (c.isActive)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>@c.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>

                            <td>
                                @if (c.IsDeleted)
                                {
                                    <span class="text-muted">Deleted</span>
                                }
                                else
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm dropdown-toggle"
                                                type="button"
                                                id="dropdownMenuButton-@c.Id"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>

                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@c.Id">
                                            <li>
                                                <a class="dropdown-item" href="@($"/categories/edit/{c.Id}")">
                                                    <i class="bi bi-pencil-fill me-1"></i> Edit
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item text-danger" href="@($"/categories/delete/{c.Id}")">
                                                    <i class="bi bi-trash-fill me-1"></i> Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-end mt-2">
            <Pager PageNumber="PageNumber" PageSize="PageSize" TotalCount="TotalCount" PageChanged="LoadPage" />
        </div>
    }
</div>

<style>
    :root {
        --indigo-main: #3f51b5;
        --indigo-light: #5c6bc0;
    }

    .user-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0;
        gap: 12px;
        flex-wrap: wrap;
    }

    .users-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        overflow: hidden;
    }

        .users-table th, .users-table td {
            padding: 14px 16px;
            text-align: left;
            vertical-align: middle;
        }

        .users-table th {
            background: linear-gradient(to right, var(--indigo-main), var(--indigo-light));
            color: white;
            font-weight: 600;
        }

        .users-table tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .users-table tr:hover {
            background-color: #eef1f7;
        }

    .dropdown-toggle::after {
        display: none;
    }

    .users-table, .users-table tbody, .users-table tr, .users-table td {
        overflow: visible !important;
        position: static !important;
    }

    .dropdown-menu {
        position: absolute !important;
        z-index: 1050 !important;
    }
</style>

@code {
    private bool ShowDeleted { get; set; } = false;
    private bool IsBusy { get; set; }
    private string? Error { get; set; }

    private List<CategoryView> Categories { get; set; } = new();
    private int PageNumber { get; set; } = 1;
    private int PageSize { get; set; } = 5;
    private long TotalCount { get; set; } = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task OnShowDeletedChanged()
    {
        await LoadAsync();
    }

    private async Task LoadPage(int newPage)
    {
        PageNumber = Math.Max(1, newPage);
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            IsBusy = true;
            Error = null;

            var url = $"api/category/paged?pageNumber={PageNumber}&pageSize={PageSize}&includeDeleted={(ShowDeleted ? "true" : "false")}";
            var paged = await Http.GetFromJsonAsync<PagedResult<CategoryView>>(url, JsonOptions);

            var items = paged?.Items ?? Array.Empty<CategoryView>();
            TotalCount = paged?.TotalCount ?? 0;

            // server may already sort; ensure stable name ordering for items on page
            Categories = items.OrderBy(x => x.Name).ToList();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
            Categories = new();
        }
        finally
        {
            IsBusy = false;
        }
    }
}
